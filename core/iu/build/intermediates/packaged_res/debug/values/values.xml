<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="black">#101010</color>
    <color name="blue">#0943A2</color>
    <color name="colorItemHighlighted">#30BA8F</color>
    <color name="colorItemNotHighlighted">#FFDB58</color>
    <color name="error">#ff3333</color>
    <color name="grey">#646464</color>
    <color name="low_black">#252525</color>
    <color name="low_blue">#083755</color>
    <color name="low_white">#C7C7C7</color>
    <color name="purple_200">#FFBB86FC</color>
    <color name="purple_500">#FF6200EE</color>
    <color name="purple_700">#FF3700B3</color>
    <color name="teal_200">#FF03DAC5</color>
    <color name="teal_700">#FF018786</color>
    <color name="white">#EFEFEF</color>
    <dimen name="big_text_size">24sp</dimen>
    <dimen name="current_path_text_size">16sp</dimen>
    <dimen name="default_margin">8dp</dimen>
    <dimen name="item_vertical_half_padding">2.5dp</dimen>
    <dimen name="path_text_size">12sp</dimen>
    <dimen name="small_text_size">18sp</dimen>
    <dimen name="square_button_size">48dp</dimen>
    <dimen name="title_text_size">30sp</dimen>
    <dimen name="toolbar_icon_size">54dp</dimen>
    <dimen name="toolbar_padding">8dp</dimen>
    <dimen name="widget_height">40dp</dimen>
    <string name="app_name">MobileDev</string>
    <string name="hello_blank_fragment">Hello blank fragment</string>
    <string name="nullSelection"><![CDATA[<Выберите>]]></string>
    <string name="title">Заголовок</string>
    <style name="Base.Theme.GlpmLocal" parent="Base.V23.Theme.GlpmLocal"/>
    <style name="Base.V23.Theme.GlpmLocal" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <item name="android:checkboxStyle">@style/Widget.GlpmLocal.CheckBox</item>
        <item name="android:buttonStyle">@style/Widget.GlpmLocal.Button</item>
        <item name="android:textViewStyle">@style/Widget.GlpmLocal.LabelTextView</item>
        <item name="android:editTextStyle">@style/Widget.GlpmLocal.EditText</item>
        <item name="android:searchViewStyle">@style/Widget.GlpmLocal.SearchView</item>
    </style>
    <style name="ColumnSeparator">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">8dp</item>
    </style>
    <style name="ItemSpinnerLayout">
        <item name="android:layout_marginTop">@dimen/item_vertical_half_padding</item>
        <item name="android:layout_marginBottom">@dimen/item_vertical_half_padding</item>
    </style>
    <style name="LabelTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="RowSeparator">
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_width">0dp</item>
    </style>
    <style name="Separator">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/white</item>
    </style>
    <style name="Theme.GlpmLocal" parent="Base.Theme.GlpmLocal"/>
    <style name="TitleTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="ToolbarIcon">
        <item name="android:layout_height">@dimen/toolbar_icon_size</item>
        <item name="android:layout_width">@dimen/toolbar_icon_size</item>
        <item name="android:background">@drawable/vbg_toolbar_item</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
        <item name="android:focusable">true</item>
        <item name="android:tint">@color/toolbar_icon_tint</item>
        <item name="android:checkable">true</item>
    </style>
    <style name="Widget.GlpmLocal.Base.ImageButton" parent="Widget.AppCompat.ImageButton">
        <item name="android:tint">@color/click_icon_tint</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">5dp</item>
    </style>
    <style name="Widget.GlpmLocal.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/vbg_button</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/WidgetTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.CheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">?android:attr/listChoiceIndicatorMultiple</item>
        <item name="android:button">@null</item>
        <item name="android:backgroundTint">@color/checkbox_tint</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="Widget.GlpmLocal.CircleImageButton" parent="Widget.GlpmLocal.Base.ImageButton">
        <item name="android:background">@drawable/vbg_button_circle</item>
    </style>
    <style name="Widget.GlpmLocal.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/vbg_edit_text</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/WidgetTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.HorizontalProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/vbg_progress_bar</item>
        <item name="android:progress">0</item>
        <item name="android:max">100</item>
    </style>
    <style name="Widget.GlpmLocal.LabelTextView" parent="Widget.AppCompat.TextView">
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/LabelTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.ModuleIcon" parent="Widget.GlpmLocal.Base.ImageButton">
        <item name="android:background">@drawable/vbg_module_icon</item>
    </style>
    <style name="Widget.GlpmLocal.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:background">@drawable/vbg_search_view</item>
        <item name="android:editTextColor">@color/text</item>
        <item name="android:iconifiedByDefault">false</item>
        <item name="android:queryBackground">@drawable/vbg_invisible</item>
        <item name="android:textAppearance">@style/WidgetTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.Spinner" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/vbg_spinner</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">48dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:textAppearance">@style/WidgetTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.SquareImageButton" parent="Widget.GlpmLocal.Base.ImageButton">
        <item name="android:background">@drawable/vbg_button_square</item>
    </style>
    <style name="Widget.GlpmLocal.TextView" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/vbg_textview</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textAppearance">@style/WidgetTextAppearance</item>
    </style>
    <style name="Widget.GlpmLocal.Title" parent="Widget.AppCompat.TextView">
        <item name="android:textAppearance">@style/TitleTextAppearance</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="WidgetTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textAlignment">center</item>
    </style>
    <declare-styleable name="HighlighterState">
        <attr format="boolean" name="state_item_highlighted"/>
    </declare-styleable>
    <declare-styleable name="SearchableSpinner">
        <attr format="boolean" name="autoSelect"/>
        <attr format="string" name="title"/>
        <attr format="boolean" name="emptyItem"/>
    </declare-styleable>
</resources>